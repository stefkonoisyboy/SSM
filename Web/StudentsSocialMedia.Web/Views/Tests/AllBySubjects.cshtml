@model StudentsSocialMedia.Web.ViewModels.Tests.AllTestsBySubjectsListViewModel
@{
    this.ViewData["Title"] = "All tests for you";
}

<style>
    body {
        background-color: #d5d6de;
    }

    .img-fluid {
        width: 160px;
    }
</style>

<div class="header-spacer"></div>
@if (this.Model.Tests.Count() == 0)
{
    <div class="row example mb-lg-5"></div>
    <div class="row example mb-lg-5"></div>
    <div class="row example mb-lg-5"></div>
    <div class="row example mb-lg-4"></div>

    <div class="row justify-content-center">
        <div class="col-md-1"></div>
        <div class="form-group">
            <div class="row justify-content-center">
                <img src="~/images/search.png" class="img-fluid" alt="Responsive image">
            </div>
            <div class="row example mb-lg-5"></div>

            <div class="row justify-content-center">
                <h3>No results were found!</h3>
            </div>
        </div>
    </div>
}
else
{
    <div class="header-spacer"></div>
    <h1 class="text-center" style="padding-left: 4em;">@this.ViewData["Title"]</h1>
    <div class="row" style="visibility: hidden;">5555555</div>
}

<div class="row justify-content-center" style="margin-right: -30px;">
    @foreach (var test in this.Model.Tests)
    {
        <div class="col-md-2">

        </div>
        <div class="card col-md-8">
            <div class="row" style="visibility: hidden;">5555555</div>
            <div class="card-body">
                <span class="badge badge-success">@test.SubjectName</span>
                <h4 class="card-title mt-2">@test.Name</h4>
            </div>
            <div class="row justify-content-center">
                <a asp-action="DoTest" asp-route-id="@test.Id" class="btn btn-primary">Enter the Test</a>
            </div>
        </div>
        <div class="row" style="visibility: hidden;">5555555</div>
    }
</div>