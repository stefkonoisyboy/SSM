@model StudentsSocialMedia.Web.ViewModels.Groups.CreateGroupInputModel
@{
    this.ViewData["Title"] = "Create a New Group";
}

<style>
    .btn {
        width: 175px;
    }

    label {
        color: #515365;
        font-size: 16px;
    }

    body {
        background-color: #d5d6de;
    }
</style>

<div class="header-spacer"></div>

<div class="row justify-content-center">
    <div class="col-md-2"></div>
    <form method="post" class="col-8 rounded border p-3 mb-5 bg-white" enctype="multipart/form-data">

        <div class="row example mb-lg-5"></div>
        <h1 class="text-center">@this.ViewData["Title"]</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row example mb-lg-5"></div>

        <div class="row justify-content-center">
            <div class="form-group col-sm-10">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control " style="border-color: #c0c3cf;"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row example mb-lg-4"></div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-10">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control " style="border-color: #c0c3cf;"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row example mb-lg-4"></div>

        <div class="row justify-content-center">
            <div class="form-group col-sm-10">
                <label>Subject</label>
                <select asp-for="SubjectId" asp-items="@this.Model.SubjectsItems" class="form-control " style="border-color: #c0c3cf;"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
        </div>

        <div class="row example mb-lg-4"></div>

        <div class="row justify-content-center">
            <div class="form-group col-sm-10">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control " style="border-color: #c0c3cf;"/>
                <span asp-validation-for="Image" class="text-danger" ></span>
            </div>
        </div>

        <div class="row example mb-lg-5"></div>

        <div class="row justify-content-center">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>

        <div class="row example mb-lg-5"></div>
    </form>
</div>