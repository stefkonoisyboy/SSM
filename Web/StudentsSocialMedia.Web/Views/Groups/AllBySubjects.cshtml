@model StudentsSocialMedia.Web.ViewModels.Groups.AllSuggestedGroupsByIdListViewModel
@inject Microsoft.AspNetCore.Identity.UserManager<StudentsSocialMedia.Data.Models.ApplicationUser> userManager
@{
    this.ViewData["Title"] = "Suggestions for you";
    var user = await this.userManager.GetUserAsync(this.User);
}

<style>
    body {
        background-color: #d5d6de;
    }

    .img-fluid {
        width: 160px;
    }
</style>
<div class="header-spacer"></div>

@if (this.Model.SuggestedGroups.Count() == 0)
{
    <div class="row example mb-lg-5"></div>
    <div class="row example mb-lg-5"></div>
    <div class="row example mb-lg-5"></div>
    <div class="row example mb-lg-4"></div>

    <div class="row justify-content-center">
        <div class="col-md-1"></div>
        <div class="form-group">
            <div class="row justify-content-center">
                <img src="~/images/search.png" class="img-fluid" alt="Responsive image">
            </div>
            <div class="row example mb-lg-5"></div>

            <div class="row justify-content-center">
                <h3>No results were found!</h3>
            </div>
        </div>
    </div>
}
else
{
    <h1 class="text-center" style="padding-left: 5em;">@this.ViewData["Title"]</h1>
    <div class="row" style="visibility: hidden;">5555555</div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-2"></div>
        <div class="col col-xl-4 col-lg-6 col-md-6 col-sm-6 col-12">

            <!-- Friend Item -->

            @foreach (var group in this.Model.SuggestedGroups)
            {
                <div class="friend-item friend-groups bg-white">
                    <div class="row" style="visibility: hidden;">k</div>
                    <div class="friend-item-content">

                        <div class="friend-avatar">
                            <div class="author-thumb">
                                <img loading="lazy" class="img-fluid" src="@group.ImageUrl" style="height:100%; width: 103%;">
                            </div>
                            <div class="author-content">
                                <a asp-action="ActivityById" asp-route-id="@group.Id" class="h5 author-name">@group.Name</a>
                                <div class="country">@group.MembersCount Members in this group</div>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <form method="post" asp-controller="Groups" asp-action="Follow" asp-route-id="@group.Id">
                            <button type="submit" class="btn btn-primary btn-md-2">Follow</button>
                        </form>
                    </div>
                    <div class="row" style="visibility: hidden;">5555555</div>
                </div>
                <div class="row" style="visibility: hidden;">5555555</div>
            }
            <!-- ... end Friend Item -->
        </div>
    </div>
</div>