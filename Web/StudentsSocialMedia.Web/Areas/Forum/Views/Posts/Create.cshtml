@model StudentsSocialMedia.Web.ViewModels.Forum.Posts.CreatePostInputModel
@{
    this.ViewData["Title"] = "Create new post";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<style>
    .btn {
        width: 175px;
    }

    label {
        color: #515365;
        font-size: 16px;
    }

    body {
        background-color: #d5d6de;
    }
</style>

<div class="header-spacer"></div>

<div class="row justify-content-center">
    <div class="col-md-2"></div>
    <form method="post" class="col-8 rounded border  p-3 mb-5 bg-white">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row example mb-lg-5"></div>
        <h1 class="text-center">@this.ViewData["Title"]</h1>
        <div class="row example mb-lg-5"></div>

        <div class="row justify-content-center">
            <div class="form-group col-sm-10">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control " style="border-color: #c0c3cf;"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="row example mb-lg-4"></div>

        <div class="row justify-content-center">
            <div class="form-group col-sm-10">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control " style="border-color: #c0c3cf;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>

        <div class="row example mb-lg-4"></div>

        <div class="row justify-content-center">
            <div class="form-group col-sm-10">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="@this.Model.CategoryItems" class="form-control " style="border-color: #c0c3cf;"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="row example mb-lg-5"></div>
        <div class="row justify-content-center">
            <input type="submit" class="btn btn-primary " value="Submit" />
        </div>
        <div class="row example mb-lg-5"></div>
    </form>
</div>
